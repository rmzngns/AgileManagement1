
@{ ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@model AgileManagement.Application.ProjectWithContributorsResponseDto

    <div class="container">
        <div class="row">
            @foreach (var item in @Model.Projects)
            {
        <div class="card w-50 col-md-3 mr-2">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <a href="#" class="btn btn-primary">Go to Task</a>
            </div>
        </div>}

        </div>

    </div>


