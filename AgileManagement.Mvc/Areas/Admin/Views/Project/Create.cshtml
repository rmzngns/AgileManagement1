
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model ProjectCreateInputModel


<a asp-area="Admin"  asp-controller="Project" asp-action="Management" class="btn btn-link">Projelerim</a>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}


<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Proje Adı">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Description</label>
        <textarea asp-for="Description" class="form-control" id="exampleInputPassword1" placeholder="Projenin Açıklması"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Proje Oluştur</button>
</form>




